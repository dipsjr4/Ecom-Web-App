*{
	margin: 0;
	padding: 0;
	font-family: arial;
	box-sizing : border-box;
	
}


h1{
	font-weight: 700;
}


p{
	font-family: 'roboto', sans-serif
	font-size: 1.25rem;
	color: var(--secondary-text-color);
	line-height: 1.8rem;
}

 
	 
 }
 /*utility class*/
.small-bold-text{
	font-size: 3rem;
	font-weight: 700;
}

.container{
	max-width: 1180;
	margin-inline: auto;
	padding-inline: var(--padding-inline-section);
}


.top-banner{
	background-color: #4fb3d4;
}

.banner-text{
	color: white;
	padding: 20px 30px;
	text-align: center;
		
}
header{
	padding: 50px var(--padding-inline-section) 0;
}

.header-section{
	justify-content: center;
	gap: 50px;

}




 